{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@styles/*": [
        "src/renderer/styles/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules/@chakra-ui",
    "node_modules/ahooks",
    "node_modules/electron-updater",
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
