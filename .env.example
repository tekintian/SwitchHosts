# Environment Variables for SwitchHosts
# Copy this file to .env and configure as needed

# HTTP API Configuration
# Enable HTTP API for remote management (default: false)
# SWH_HTTP_API_ENABLED=false

# HTTP API Key (required if API is enabled)
# Generate a secure random key: openssl rand -hex 32
# SWH_API_KEY=your_secure_api_key_here

# HTTP API Port (default: 50761)
# SWH_HTTP_API_PORT=50761

# Bind HTTP API to localhost only (recommended: true)
# Set to false to bind to 0.0.0.0 (all interfaces) - NOT RECOMMENDED
# SWH_HTTP_API_ONLY_LOCAL=true

# Development Settings
# Disable Electron security warnings in development only
# ELECTRON_DISABLE_SECURITY_WARNINGS=1

# Log Level (debug, info, warn, error)
# SWH_LOG_LEVEL=info
